/* Estilo global para a interface */
QWidget {
    background-color: #ffffff;
    font-family: 'Segoe UI', sans-serif;
}

/* Estilo específico para a tela de boas-vindas */
QWidget#welcomeScreen {
    background-color: #a16ef5;
}

/* Estilo para o Label da tela de boas-vindas */
QLabel#welcomeLabel {
    font-size: 32px;
    font-weight: bold;
    color: white;
    margin-bottom: 20px;
}

/* Estilo para o Botão de acessar o sistema */
QPushButton#accessButton {
    background-color: white;
    border: none;
    border-radius: 10px;
    color: #a16ef5;
    padding: 10px 20px;
    font-size: 18px;
    font-weight: bold;
}

QPushButton#accessButton:hover {
    background-color: #d1b3ff;
}

/* Estilo para a tela de login */
QLabel#loginLabel {
    font-size: 24px;
    color: #333;
    margin-bottom: 20px;
}

/* Campos de entrada */
QLineEdit#inputField {
    border: 1px solid #bbb;
    border-radius: 8px;
    padding: 8px;
    font-size: 16px;
    width: 250px;
}

/* Botão de login */
QPushButton#loginButton {
    background-color: #a16ef5;
    border: none;
    border-radius: 8px;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
}

QPushButton#loginButton:hover {
    background-color: #c19efb;
}

/* Estilo para o cabeçalho da tela Home */
QLabel#homeHeader {
    font-size: 32px;
    color: #333333;
    margin-bottom: 20px;
}

/* Estilo comum para os botões da tela Home */
QPushButton#homeButton {
    background-color: #a16ef5;
    color: white;
    border: none;
    border-radius: 10px;
    padding: 10px 0;
    font-size: 18px;
}

QPushButton#homeButton:hover {
    background-color: #c19efb;
}
